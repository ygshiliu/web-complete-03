<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	
	window.onload = function(){
		//ajax中给我们提供了一个XMLHttpRequest
		//ajax的一切操作都是基于XMLHttprequest对象进行的
		document.getElementById("btn").onclick = function(){

			//创建XMLHttpRequest
			var xhr = new XMLHttpRequest();
			//准备参数
			/*
				method:请求方式
				url:用来指向处理请求的服务器url路径
				async:是一个布尔值。默认为true
				username:用户名
				password：密码
				
				get请求是通过url地址来传递请求参数的
			*/
			var name = encodeURI("刘在石");
			xhr.open("get", "/18-web-ajax/AjaxServlet?username="+name+"&password=123123");
			//发送请求
			//body代表请求体。get请求没有请求体
			xhr.send();
			//获取响应
			//为什么是空白？是因为我们还没有等到响应就绪，我们就去获取
			/*
				XMLHttpRequest的状态属性(readyState)：
					0: 请求未初始化 
					1: 服务器连接已建立 
					2: 请求已接收 
					3: 请求处理中 
					4: 请求已完成，且响应已就绪 
			*/
			//每当 readyState 属性改变时，就会调用该函数。
			xhr.onreadystatechange=function(){
						//在响应就绪且响应状态码为200时才去获取返回值 
						if(xhr.readyState==4 && xhr.status==200){
							//返回文本
							//var str = xhr.responseText;
							//返回document
							var dom = xhr.responseXML;
							console.log(dom);
						}
					}
			
		}
		
		document.getElementById("btn02").onclick = function(){
			//创建XMLHttpRequest
			var xhr = new XMLHttpRequest();
			
			//准备参数
			xhr.open("post", "/18-web-ajax/AjaxServlet");
			//如果发送post请求，需要指定一个请求头：Content-type:application/x-www-form-urlencode"
			xhr.setRequestHeader("Content-type","application/x-www-form-urlencoded");
			//发送请求
			xhr.send("username=haha&age=15");
			//获取响应
			xhr.onreadystatechange=function(){
				if(xhr.readyState==4 && xhr.status==200){
					//var str = xhr.responseText;
					var dom = xhr.responseXML;
					/*
						<stu>
							<name>Lucy</name>
							<age>23</age>
						</stu>
					*/
					var nameEle = dom.getElementsByTagName("name")[0];
					alert(nameEle.firstChild.nodeValue);
				}
			}
		}
		
		document.getElementById("btn03").onclick = function(){
			//创建XMLHttpRequest
			var xhr = new XMLHttpRequest();
			
			//准备参数
			xhr.open("post", "/18-web-ajax/AjaxServlet");
			//如果发送post请求，需要指定一个请求头：Content-type:application/x-www-form-urlencode"
			xhr.setRequestHeader("Content-type","application/x-www-form-urlencoded");
			//发送请求
			xhr.send("username=haha&age=15");
			//获取响应
			xhr.onreadystatechange=function(){
				if(xhr.readyState==4 && xhr.status==200){
					var str = xhr.responseText;
					//将字符串转成JSON
					var obj = JSON.parse(str);
					alert(obj.name);
				}
			}
		}
	}

</script>
</head>
<body>
	<h1>index.html</h1>
	
	<button id="btn">发送ajax&get</button>
	<button id="btn02">发送ajax&post</button>
	<button id="btn03">发送ajax&post&Json</button>
</body>
</html>